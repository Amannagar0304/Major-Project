<%- layout("/layouts/boilerplate") %>

<body>
    <div class="row mt-3">
        <div class="col-8  offset-2" >
            <br/>
    <h3> Create a New Listing</h3> <br/>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data"> 
        <div class="mb-3">
            <label for="title" class="from-label">Title:</label><br/>
            <input name="listing[title]" placeholder="Add a catchy name" type="text" class="form-control" required>
        <div class="valid-feedback">Title look  goods!</div>
        </div>
        <br/>
        
        <div  class="mb-3">
            <label for="description" class="from-label">Description:</label><br/>
            <textarea name="listing[description]" class="form-control" required></textarea>
            <div class="invalid-feedback">Please enter a short description</div>
        </div>
        <br/>

        <div class="mb-3">
            <label for="image" class="from-label">Upload listing Image </label><br/>
                <input name="listing[image]" type="file" class="form-control" required>
        </div>
        <br/>

    <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="from-label">Price</label><br/>
            <input name="listing[price]" placeholder="*****"  class="form-control" required>
            <div class="invalid-feedback">Pleace enter a valid price</div>
        </div>
    <br/><br/>
        <div class="mb-3 col-md-8">
            <label for="contry" class="from-label">Contact No.</label><br/>
            <input name="listing[country]" placeholder="**********"  class="form-control" required>
            <div class="invalid-feedback">Country name should be valid</div>
        </div>

    </div>
    <br/>

    <div class="mb-3">
        <label for="location" class="from-label">Location</label><br>
        <input name="listing[location]" placeholder="place"  class="form-control" required>
        <div class="invalid-feedback"> Location name should be valid</div>
    </div>
    <br/>

        <button class="btn btn-dark add-btn mt-3"  >Add</button>
        <br/><br/>
    </form>
    </div>
    </div>
</body>
